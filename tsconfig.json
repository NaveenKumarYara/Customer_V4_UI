{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out_tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom"
    ],
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true
  }

}
